{
    "name": "origamichat-next",
    "version": "0.1.0",
    "description": "Next.js components and utilities for OrigamiChat, built on top of the React package",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist/**"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "lint": "eslint src --ext .ts,.tsx",
        "check-types": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "keywords": [
        "nextjs",
        "react",
        "chat",
        "support",
        "ai",
        "customer-support",
        "server-components",
        "typescript"
    ],
    "author": "Anthony Riera",
    "license": "MIT",
    "homepage": "https://origamichat.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/anthonyriera/origami-monorepo",
        "directory": "packages/next"
    },
    "bugs": {
        "url": "https://github.com/anthonyriera/origami-monorepo/issues"
    },
    "publishConfig": {
        "access": "public"
    },
    "dependencies": {
        "origamichat": "workspace:*"
    },
    "peerDependencies": {
        "next": ">=13.0.0",
        "react": ">=16.8.0",
        "react-dom": ">=16.8.0"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "eslint": "^8.57.1",
        "next": "^15.1.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tsup": "^8.3.5",
        "typescript": "^5.8.2"
    }
}